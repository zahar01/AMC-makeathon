<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <Button
            android:text="Не придумали"
            android:textSize="11dp"
            android:layout_width="180dp"
            android:onClick="onClickAction"
            android:layout_height="44dp" android:id="@+id/button5"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="106dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp"/>
    <Button
            android:text="Другое"
            android:textSize="11dp"
            android:layout_width="179dp"
            android:onClick="onClickAction"
            android:layout_height="44dp" android:id="@+id/button4"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="106dp" android:layout_marginEnd="16dp" android:layout_marginRight="16dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="Лесной пожар"
            android:textSize="11dp"
            android:layout_width="179dp"
            android:onClick="onClickAction"
            android:layout_height="44dp" android:id="@+id/button3"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="55dp" android:layout_marginEnd="16dp" android:layout_marginRight="16dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="Нефтяной разлив"
            android:textSize="11dp"
            android:layout_width="180dp"
            android:onClick="onClickAction"
            android:layout_height="44dp" android:id="@+id/button2"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="55dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"/>
    <TextView
            android:text="Проблема"
            android:textColor="#000000"
            android:layout_width="72dp"
            android:layout_height="19dp" android:id="@+id/textView3"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="19dp"
            android:layout_marginStart="19dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="28dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>