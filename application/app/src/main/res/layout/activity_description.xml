<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".DescriptionActivity">


    <TextView
            android:text="SMTHRANDOM"
            android:layout_width="306dp"
            android:layout_height="36dp" android:id="@+id/problem"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="28dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="36dp" android:layout_marginStart="36dp"
    />
    <Button
            android:text="Сделать фото"
            android:layout_width="178dp"
            android:onClick="takePhoto"
            android:layout_height="38dp" android:id="@+id/button"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="36dp"
            android:layout_marginStart="36dp" app:layout_constraintTop_toBottomOf="@+id/problem"
            android:layout_marginTop="16dp"/>
    <ImageView
            android:layout_width="150dp"
            android:layout_height="80dp" tools:srcCompat="@tools:sample/avatars" android:id="@+id/photo"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="80dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="244dp" android:layout_marginStart="244dp"/>
    <EditText
            android:layout_width="346dp"
            android:layout_height="252dp"
            android:inputType="textMultiLine"
            android:gravity="start|top"
            android:ems="10"
            android:id="@+id/fullProblemDescriptionMultilineText"
            app:layout_constraintTop_toBottomOf="@+id/button"
            android:layout_marginTop="120dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="36dp" android:layout_marginStart="36dp"/>
    <TextView
            android:text="Описание проблемы"
            android:layout_width="231dp"
            android:layout_height="23dp" android:id="@+id/problemDescriptionLabel"
            app:layout_constraintTop_toBottomOf="@+id/button"
            android:layout_marginTop="76dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="48dp" android:layout_marginStart="48dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>